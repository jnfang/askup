<div class="modal fade" id="modal-edit-question-group" role="dialog" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title">Edit Qset</h4>
      </div>
      <div class="modal-body">
        <form role="form" action="/qsets/<%= @current_qset_id %>" method="post">
          <input name="_method" type="hidden" value="patch" />
          <%= tag(:input, :type => "hidden", :name => request_forgery_protection_token.to_s, :value => form_authenticity_token) %>
          <div class="form-group">
            <label for="text"> Change the name of this qset </label>
            <input type="text" class="form-control" name="name" />
          </div>
          <button type="submit" class="btn btn-theme" id="edit-question-group-submit" aria-label="Save qset">
            Save
          </button>
          <% if @is_qset_deletable %>
            <button type="button" class="btn btn-flat" id="edit-question-group-delete" aria-label="Delete qset">
              Delete
            </button>
          <% end %>
          <button type="button" class="btn btn-flat" data-dismiss="modal" aria-label="Cancel">
            Cancel
          </button>
        </form>
        <% if @is_qset_deletable %>
          <div id="delete_confirmation_form_container" style="display:none;">
            <form role="form" action="/qsets/<%= @current_qset_id %>" method="post">
              <input name="_method" type="hidden" value="delete" />
              <%= tag(:input, :type => "hidden", :name => request_forgery_protection_token.to_s, :value => form_authenticity_token) %>
              <p> Are you sure you want to delete this qset? </p>
              <p><i> All questions in this group will be moved into the parent group. </i></p>
              <button type="submit" class="btn btn-pink" aria-label="Confirm delete">
                Confirm delete
              </button>
            </form>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
